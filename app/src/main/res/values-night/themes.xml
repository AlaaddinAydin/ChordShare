<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ChordShare" parent="Theme.Material3.DayNight">
        <!-- Customize your dark theme here. -->
        <item name="android:windowFullscreen">true</item>

    </style>


    <style name="OwnButtonTheme" parent="Base.Theme.ChordShare">
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:textColor">@color/buttonText</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelLarge</item>
    </style>

    <style name="OwnUntransparentButtonTheme" parent="Base.Theme.ChordShare">
        <item name="android:background">@drawable/custom_button_untransparent</item>
        <item name="android:textColor">@color/buttonText</item>
    </style>



    <style name="OwnTextTheme" parent="Base.Theme.ChordShare">
        <!-- Hafif şeffaf beyaz arka plan -->
        <item name="android:background">@drawable/custom_input</item>

        <!-- Beyaz metin rengi -->
        <item name="android:textColor">@color/white</item>

        <!-- Beyaz ipucu metni rengi -->
        <item name="android:textColorHint">@color/white</item>

        <!-- Metin alanı genişliği -->
        <item name="android:ems">15</item>

        <!-- Metin boyutu -->
        <item name="android:textSize">14sp</item>

        <!-- Sol padding -->
        <item name="android:paddingStart">10dp</item>

        <!-- Kenarlık ve gölge ekleme -->
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:elevation">2dp</item>
    </style>

</resources>