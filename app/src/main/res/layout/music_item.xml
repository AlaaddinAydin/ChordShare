<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="5dp"
    android:background="@color/musicItemBgColour"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="120dp"
        android:id="@+id/music_item_imageViewMusicImage"
        android:layout_height="150dp">


    </ImageView>

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        
        <TextView
            android:layout_width="wrap_content"
            android:text="İsmi"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/music_item_textViewMusicName"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:text="Grup"
            android:textSize="16sp"
            android:layout_marginTop="3sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/music_item_textViewMusicGroup"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:text="Sözleri"
            android:layout_marginTop="3sp"
            android:ellipsize="end"
            android:maxLines="5"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/music_item_textViewMusicLyrics"
            android:layout_height="wrap_content">

        </TextView>



    </LinearLayout>

</LinearLayout>