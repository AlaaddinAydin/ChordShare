<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="7dp"
    android:background="@color/musicItemBgColour"
    android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:cardCornerRadius="250dp"
            android:layout_marginEnd="20dp"
            app:cardBackgroundColor="@color/light_gray">

            <androidx.cardview.widget.CardView
                android:layout_width="125dp"
                android:layout_height="125dp"
                app:cardCornerRadius="250dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/music_item_imageViewMusicImage"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_image_view"
                    >

                </ImageView>

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>





    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="İsmi"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/music_item_textViewMusicName"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:text="Grup"
            android:textSize="16sp"
            android:layout_marginTop="3sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/music_item_textViewMusicGroup"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:text="Sözleri"
            android:layout_marginTop="3sp"
            android:ellipsize="end"
            android:maxLines="5"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/music_item_textViewMusicLyrics"
            android:layout_height="wrap_content">

        </TextView>



    </LinearLayout>

</LinearLayout>